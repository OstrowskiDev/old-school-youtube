{
  "manifest_version": 2,
  "name": "Old School YouTube",
  "version": "1.0",

  "description": "Removes Shorts and Movies from YouTube homepage to make it feel more like its back to 2010",

  "icons": {
    "48": "icons/appico.svg"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["oldSchoolYouTube.js"],
      "run_at": "document_idle"
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "OldSchoolYoutube@addon.com"
    }
  }
}